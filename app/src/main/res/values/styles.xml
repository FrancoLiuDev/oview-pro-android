<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/color_visual_main</item>
        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/color_visual_main</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBarOverlay">true</item>


    </style>


    <style name="Theme.AppCompat.AppThemeWhite" parent="Theme.AppCompat.Light">

        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:colorBackground">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_visual_main</item>
        <item name="android:textColor">@color/color_black</item>



        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>


    <style name="Theme.AppCompat.OverLay" parent="Theme.AppCompat.Light">

        <item name="android:windowBackground">@color/color_visual_main</item>
        <item name="android:colorBackground">@color/color_visual_main</item>
        <item name="colorPrimaryDark">@color/color_visual_main</item>
        <item name="android:textColor">@android:color/darker_gray</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="android:windowAnimationStyle">@android:style/Animation</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>


    </style>

    <style name="Theme.AppCompat.StdToolBar" parent="Theme.AppCompat.Light">

        <item name="android:windowBackground">@color/color_visual_main</item>
        <item name="android:colorBackground">@color/color_visual_main</item>
        <item name="colorPrimaryDark">@color/color_visual_main</item>
        <item name="android:textColor">@android:color/darker_gray</item>



        <item name="android:windowAnimationStyle">@android:style/Animation</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@android:color/holo_blue_bright</item>
        <item name="colorControlHighlight">@android:color/holo_blue_bright</item>


    </style>


    <style name="AlertDialogCustom" parent="Base.ThemeOverlay.AppCompat.Dialog.Alert">


        <!-- Used for the dialog background -->
        <item name="android:background">@color/color_visual_main</item>

        <!-- Used for the buttons -->

        <!-- Used for the title and text -->
        <item name="android:textColor">@android:color/holo_blue_light</item>

        <item name="android:editTextStyle">@style/MyEditText</item>


        <item name="colorControlActivated">@android:color/holo_blue_light</item>
        <item name="colorControlHighlight">@android:color/holo_blue_light</item>
        <item name="android:textColorPrimary">@color/color_visual_main</item>


    </style>


    <style name="AlertDialogCustom_backup" parent="Base.ThemeOverlay.AppCompat.Dialog.Alert">


        <!-- Used for the dialog background -->
        <item name="android:background">@color/color_visual_main</item>

        <!-- Used for the buttons -->

        <!-- Used for the title and text -->
        <item name="android:textColor">@android:color/holo_blue_light</item>

        <item name="android:editTextStyle">@style/MyEditText</item>

        <item name="colorControlActivated">@android:color/holo_blue_light</item>
        <item name="colorControlHighlight">@android:color/holo_blue_light</item>

    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="CardViewScrollView" parent="android:Widget.ScrollView">
        <item name="android:overScrollMode">never</item>
    </style>


</resources>
