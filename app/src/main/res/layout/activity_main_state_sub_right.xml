<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
        android:layout_width="@dimen/device_icon_size"
        android:layout_height="@dimen/device_icon_size"
        android:src="@drawable/machine_g"
        android:layout_above="@+id/textView_oview_device"
        android:layout_centerHorizontal="true"
        android:id="@+id/image_device_state"/>


    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/device_string_size"

        android:id="@+id/textView_oview_device"/>

    <Button
        android:text="@string/connect_to_device"
        android:textColor="@color/color_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_oview_device"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/button_connect_device"/>

</RelativeLayout>