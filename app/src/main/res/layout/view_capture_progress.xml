<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_capture_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

   >
    <ProgressBar

        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:maxHeight="10dip"
        android:minHeight="50dip"
        android:progress="0"
        android:id="@+id/progressBar2"
        android:visibility="visible"
         />


    <Button android:id="@+id/button_stop_capture2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_accent_red"
            android:layout_below="@+id/text_progress_precent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/stop_capture"
            android:textStyle="bold" />

    <TextView android:id="@+id/text_progress_precent"
              android:layout_width="match_parent"
              android:textColor="@color/color_black"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="--"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textStyle="bold"
              android:layout_below="@+id/progressBar2"
              android:layout_alignParentStart="true"/>

</RelativeLayout>
