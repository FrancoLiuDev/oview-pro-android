<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/device_string_size"

        android:id="@+id/textView"/>

    <ImageView
        android:layout_width="@dimen/device_icon_size"
        android:layout_height="@dimen/device_icon_size"
        android:src="@drawable/camera_g"
        android:id="@+id/image_camera_state"
        android:layout_above="@+id/textView"
        android:layout_alignEnd="@+id/textView"/>

    <Button
        android:text="@string/connect_to_camera"
        android:textColor="@color/color_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/button_connect_cam"/>

</RelativeLayout>